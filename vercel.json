{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python"
        },
        {
            "src": "static/**",
            "use": "@vercel/static"
        },
        {
            "src": "index.html",
            "use": "@vercel/static"
        },
        {
            "src": "script.js",
            "use": "@vercel/static"
        },
        {
            "src": "styles.css",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/upload",
            "methods": ["POST"],
            "dest": "app.py"
        },
        {
            "src": "/query",
            "methods": ["POST"],
            "dest": "app.py"
        },
        {
            "src": "/status",
            "methods": ["GET"],
            "dest": "app.py"
        },
        {
            "src": "/script.js",
            "dest": "/script.js"
        },
        {
            "src": "/styles.css",
            "dest": "/styles.css"
        },
        {
            "src": "/",
            "dest": "/index.html"
        },
        {
            "src": "/uploads/(.*)",
            "dest": "/uploads/$1"
        },
        {
            "src": "/vector_store/(.*)",
            "dest": "/vector_store/$1"
        }
    ],
    "env": {
        "PYTHON_VERSION": "3.9"
    },
    "functions": {
        "app.py": {
            "memory": 1024,
            "maxDuration": 60
        }
    },
    "outputs": {
        "dir": [
            "uploads",
            "vector_store"
        ]
    }
}
